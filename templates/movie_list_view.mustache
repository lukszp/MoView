<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>MoView - Enjoy responsibly</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<link href="static/default.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div id="wrapper">
  <div id="header">
    <div id="logo">
      <h1>MoView - My Movies</h1>
      <h2>What are you going to do this evening?</h2>
    </div>
    <!-- end div#logo -->
  </div>
  <!-- end div#header -->
  <div id="page">
      <div id="content">
      <div style="clear: both; height: 20px"></div>
{{#movie_content}}      
      <!-- MOVIES CONTENT - START -->
{{#movie}}
        <div class="post">
          <h2 class="title">            
            <a href="{{#path}} {{pathValue}} {{/path}}">
              {{#title}} {{titleValue}} {{/title}}
            </a>
          </h2>
          <p class="byline">
            <strong>Rating:</strong> {{#rating}} {{ratingValue}}  {{/rating}}
          </p>
          <div class="entry">
            <p><strong>Genres:</strong> {{#genres}} {{genresValue}}  {{/genres}}</p>
            <p><strong>Runtime:</strong> {{#runtime}} {{runtimeValue}}  {{/runtime}}</p>
            <p><strong>Language:</strong> {{#language}} {{languageValue}}  {{/language}}</p>
            <p><strong>Plot:</strong></p>
            <p>{{#plot}} {{plotValue}}  {{/plot}}</p>
          </div>
        </div>
{{/movie}}
      <!-- MOVIES CONTENT - END -->
{{/movie_content}}
      </div>
      <!-- end div#content -->
      <div style="clear: both; height: 1px"></div>
  </div>
  <!-- end div#page -->
</div>
<!-- end div#wrapper -->
  <div id="footer">
    <p>Copyright &copy; 2007 Marked. All Rights Reserved. Designed by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>. </p>

  </div>
  <!-- end div#footer -->

</body>
</html>
